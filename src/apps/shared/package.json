{
  "name": "@homie/shared",
  "version": "0.1.3",
  "private": true,
  "type": "module",
  "description": "Shared protocol, transport, and chat client modules for Homie web and mobile apps.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^28.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.18"
  }
}
